{
  "name": "tazapay",
  "displayName": "TazaPay Integration",
  "description": "Integrate with TazaPay services and access TazaPay's AI assistant directly in GitHub Copilot Chat using @tazapay",
  "version": "1.2.0",
  "publisher": "tazapay",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "tazapay",
    "payments",
    "api",
    "integration",
    "fintech",
    "escrow",
    "copilot",
    "ai",
    "chat"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tazapay/tazapay-extension"
  },
  "bugs": {
    "url": "https://github.com/tazapay/tazapay-extension/issues"
  },
  "homepage": "https://tazapay.com",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tazapay.authenticate",
        "title": "TazaPay: Authenticate with Secret Key"
      },
      {
        "command": "tazapay.listTools",
        "title": "TazaPay: List Available Tools"
      },
      {
        "command": "tazapay.askQuestion",
        "title": "TazaPay: Ask Documentation Question"
      },
      {
        "command": "tazapay.generateCode",
        "title": "TazaPay: Generate Integration Code"
      },
      {
        "command": "tazapay.showWelcome",
        "title": "TazaPay: Welcome",
        "icon": "$(home)"
      },
      {
        "command": "tazapay.openCopilotChat",
        "title": "TazaPay: Open AI Assistant"
      },
      {
        "command": "tazapay.testRAG",
        "title": "TazaPay: Test RAG Service Connection"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tazapay.authenticate",
          "when": "true"
        },
        {
          "command": "tazapay.listTools",
          "when": "tazapay.authenticated"
        },
        {
          "command": "tazapay.askQuestion",
          "when": "tazapay.authenticated"
        },
        {
          "command": "tazapay.generateCode",
          "when": "tazapay.authenticated"
        }
      ]
    },
    "views": {
      "tazapay-explorer": [
        {
          "id": "tazapayMcpWelcome",
          "name": "Welcome",
          "type": "webview",
          "icon": "$(home)",
          "when": "!tazapay.authenticated"
        },
        {
          "id": "tazapayMcpTools",
          "name": "TazaPay Tools",
          "when": "tazapay.authenticated",
          "icon": "$(plug)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tazapay-explorer",
          "title": "TazaPay Integration",
          "icon": "./activity-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "TazaPay Integration",
      "properties": {
        "tazapay.serverUrl": {
          "type": "string",
          "default": "https://aaba8e7a84a1.ngrok-free.app",
          "description": "TazaPay Server URL"
        },
        "tazapay.apiKey": {
          "type": "string",
          "description": "Your TazaPay API Key"
        },
        "tazapay.secretKey": {
          "type": "string",
          "description": "Your TazaPay Secret Key"
        },
        "tazapay.forceAgentMode": {
          "type": "boolean",
          "default": false,
          "description": "Always use MCP tools instead of RAG for @tazapay queries"
        }
      }
    },
    "chatParticipants": [
      {
        "id": "tazapay.assistant",
        "name": "tazapay",
        "description": "Ask questions about TazaPay's payment APIs, escrow services, and integration guides",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.118",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
